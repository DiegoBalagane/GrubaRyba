<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Edytuj swoje dane"/>

    <TextView
        android:layout_width="200dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Wpisz dane, które chcesz zmienić. Jeśli czegoś nie chcesz zmieniać, to zostaw puste odpowiedznie miejsce"/>



    <EditText
        android:id="@+id/input_name_to_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputEmail"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Imie"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_lastname_to_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputName"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="textPersonName" />


</LinearLayout>