<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/imageButtonCalculator"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageButtonRanking"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMaps"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_group_add_24" />

        <ImageButton
            android:id="@+id/imageButtonAtlas"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="48dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageButtonMessages"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_menu_book_24" />

        <ImageButton
            android:id="@+id/imageButtonMaps"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageButtonPoradnik"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonAtlas"
            app:srcCompat="@drawable/ic_baseline_map_24" />

        <ImageButton
            android:id="@+id/imageButtonMemes"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="76dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonRanking"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_tag_faces_24" />

        <ImageButton
            android:id="@+id/imageButtonMessages"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="76dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_message_24" />

        <ImageButton
            android:id="@+id/imageButtonPoradnik"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="76dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMessages"
            app:srcCompat="@drawable/ic_baseline_event_note_24" />

        <ImageButton
            android:id="@+id/imageButtonRanking"
            android:layout_width="101dp"
            android:layout_height="86dp"

            android:layout_marginStart="76dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonPoradnik"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="12dp"
            android:text="Wiadomości"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonPoradnik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMessages"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="65dp"
            android:text="Atlas ryb i przynęt"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonMaps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonAtlas"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="12dp"
            android:text="Kalendarz"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonRanking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonPoradnik"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="108dp"
            android:text="Mapa"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonCalculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMaps"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="12dp"
            android:text="Twoje połowy"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonMemes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonRanking"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="64dp"
            android:text="Ranking wędkarzy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonCalculator" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:text="Kącik humorystyczny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMemes" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="206dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true"
        android:background="@color/white">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>